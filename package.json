{
  "name": "createrington",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "undici": "^6.23.0",
    "discord-html-transcripts": {
      "undici": "^6.23.0"
    },
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "scripts": {
    "generate": "npm run generate --workspace=@createrington/server && npm run build:shared && npm run typecheck",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "dev:client": "npm run dev --workspace=@createrington/client",
    "dev:server": "npm run dev --workspace=@createrington/server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "npm run build --workspace=@createrington/client",
    "build:server": "npm run build --workspace=@createrington/server",
    "build:shared": "npm run build --workspace=@createrington/shared",
    "build": "npm run generate && npm run build:shared && npm run build:client && npm run build:client",
    "test": "npm run test --workspace=@createrington/server",
    "test:unit": "npm run test:unit --workspace=@createrington/server",
    "deploy-commands": "npm run util:deploy-commands --workspace=@createrington/server",
    "scrape-discord": "npm run util:scrape-discord --workspace=@createrington/server",
    "dump-schema": "npm run util:db-dump-schema --workspace=@createrington/server",
    "setup": "npm run util:scrape-discord --workspace=@createrington/server && npm run db:up && npm run typecheck",
    "shutdown": "npm run db:down",
    "db:up": "docker-compose -f db/docker-compose.yml up -d postgres",
    "db:down": "docker-compose -f db/docker-compose.yml down",
    "db:logs": "docker-compose -f db/docker-compose.yml logs -f postgres",
    "db:reset": "docker-compose -f db/docker-compose.yml down -v && docker-compose -f db/docker-compose.yml up -d postgres",
    "db:shell": "docker exec -it createrington-db psql -U postgres -d createrington_db",
    "pgadmin": "docker-compose -f db/docker-compose.yml up -d pgadmin"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
