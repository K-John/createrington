{
  "name": "@createrington/server",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run generate && tsc && npm run post-build && npm run build:copy-assets",
    "build:copy-assets": "copyfiles -u 1 \"src/**/*.html\" \"src/**/*.png\" \"src/**/*.jpg\" \"src/**/*.svg\" dist/",
    "post-build": "tsx src/scripts/tools/post-build.ts",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "generate": "tsx src/scripts/generate.ts",
    "util:generate-structure": "node src/scripts/tools/generate-structure.js",
    "util:env-gen": "tsx src/scripts/env/env-gen.ts",
    "util:env-find": "tsx src/scripts/env/env-gen.ts",
    "util:import-find": "node src/scripts/dependency/import-find.js",
    "util:schema-info": "node src/scripts/db/get-table-info.js",
    "util:deploy-commands": "tsx src/discord/deployers/command-deployer.ts",
    "util:db-dump-schema": "tsx src/scripts/db/dump-schema.ts",
    "generate:db-query-system": "tsx src/scripts/db/generate-query-system.ts",
    "test": "vitest",
    "test:uni": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --testPathPattern=unit",
    "test:integration": "vitest runn --testPathPattern=integration",
    "test:e2e": "vitest run --testPathPattern=e2e"
  },
  "keywords": [],
